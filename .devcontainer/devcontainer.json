{
    "name": "Python 3",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:0-3.8",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "ms-python.python"
            ]
        }
    },
    "forwardPorts": [5000],
    "postCreateCommand": "pip install -r requirements.txt",
    "remoteUser": "vscode"
}
